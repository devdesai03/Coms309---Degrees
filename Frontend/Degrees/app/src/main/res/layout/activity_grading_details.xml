<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCurrentGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Current Grade: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewCurrentGradeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCurrentGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNewGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCurrentGradeValue"
        android:layout_margin="16dp"
        android:hint="Enter new grade"
        android:inputType="text"
        android:maxLines="1" />

    <!-- Add a Button to update the grade -->
    <Button
        android:id="@+id/buttonUpdateGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNewGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Update Grade" />
</RelativeLayout>
